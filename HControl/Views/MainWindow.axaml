<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HControl.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:HControl.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HControl.Views.MainWindow"
        x:Name="wndMain"
        Icon="/Assets/avalonia-logo.ico"
        Title="HControl"
        x:DataType="vm:MainViewModel">
	<Design.DataContext>
		<vm:MainViewModel />
	</Design.DataContext>
    <Window.KeyBindings>
		<KeyBinding Gesture="Escape" Command="{Binding CloseCommand}" />
        <KeyBinding Gesture="F11" Command="{Binding FullscreenCommand}" />
        <KeyBinding Gesture="Space" Command="{Binding PauseCommand}" />
        <KeyBinding Gesture="Right" Command="{Binding NextImageCommand}" />
        <KeyBinding Gesture="Left" Command="{Binding PrevImageCommand}" />
    </Window.KeyBindings>
        <views:MainView Name="vMain" />
</Window>
